<head><style>
.marge{
    margin: 0px;
    padding: 0px;
    font-family: Avenir, sans-serif;
}

nav{
    width: 90%;
    margin: 0 auto;
    background-color: white;
    position: sticky;
    top: 0px;
}

nav ul{
    list-style-type: none;
}

nav ul li{
    float: left;
    width: 16%;
    text-align: center;
    position: relative;
}

nav ul::after{
    content: "";
    display: table;
    clear: both;
}

nav a{
    display: block;
    text-decoration: none;
    color: black;
    border-bottom: 2px solid transparent;
    padding: 10px 0px;
}

nav a:hover{
    color: orange;
    border-bottom: 2px solid gold;
}

.sous{
    display: none;
    box-shadow: 0px 1px 2px #CCC;
    background-color: white;
    position: absolute;
    width: 100%;
    z-index: 1000;
}
nav > ul li:hover .sous{
    display: block;
}
.sous li{
    float: none;
    width: 100%;
    text-align: left;
}
.sous a{
    padding: 10px;
    border-bottom: none;
}
.sous a:hover{
    border-bottom: none;
    background-color: RGBa(200,200,200,0.1);
}
.deroulant > a::after{
    content:" ▼";
    font-size: 12px;
}

.conteneur{
  margin: 50px 20px;
  height: 1500px;
}</style></head>

<nav class="marge">
  <ul class="marge">
    <li class="marge"><a class="marge" href="{{ path('politique_index') }}">Accueil</a></li>
    
    <li class="marge deroulant">
      <a class="marge" href="{{ path('affaire_index')}}">Affaire</a>
      <ul class="marge sous">
        {%for affaire in lesAffaires%}
            <li class="marge"><a class="marge" href="{{ path('affaire_voir', {'id': affaire.id }) }}">{{affaire.designation}}</a></li>
        {%endfor%}
      </ul>
    </li>
    
    <li class="marge deroulant">
      <a class="marge" href="{{ path('mairie_index')}}">Mairie</a>
      <ul class="marge sous">
        {%for mairie in lesMairies%}
            <li class="marge"><a class="marge" href="{{ path('mairie_voir', {'id': mairie.id }) }}">{{mairie.ville}}</a></li>
        {%endfor%}
      </ul>
    </li>

    <li class="marge deroulant">
      <a class="marge" href="{{ path('parti_index')}}">Parti</a>
      <ul class="marge sous">
        {%for parti in lesPartis%}
            <li class="marge"><a class="marge" href="{{ path('parti_voir', {'id': parti.id }) }}">{{parti.nom}}</a></li>
        {%endfor%}
      </ul>
    </li>

    <li class="marge deroulant">
      <a class="marge" href="{{ path('politicien_index')}}">Politicien</a>
      <ul class="marge sous">
        {%for politicien in lesPoliticiens%}
            <li class="marge"><a class="marge" href="{{ path('politicien_voir', {'id': politicien.id }) }}">{{politicien.nom}}</a></li>
        {%endfor%}
      </ul>
    </li>  
    {% if user is empty %}
      <li class="marge"><a class="marge" href="{{ path('login') }}"> Connexion</a></li>  
    {% else %}
      <li class="marge"><a class="marge" href="{{ path('logout') }}"> Déconnexion</a></li>  
    {% endif %}
  </ul>
</nav>